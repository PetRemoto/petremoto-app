<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/imageViewDispenserStatus"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/email" />

    <TextView
        android:id="@+id/textViewDispenserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/imageViewDispenserStatus"
        android:text="Dispenser 01" />

    <TextView
        android:id="@+id/textViewLastTimeFed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewDispenserName"
        android:layout_alignBottom="@+id/textViewDispenserName"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="10/12/14" />

</RelativeLayout>